<style>
  .mouse_icon {
    position: relative;
    width: 30px;
    height: 60px;
    margin: 250px auto 0;
    border: 2px solid rgb(10, 243, 10);
    border-radius: 50px;
  }
  .mouse_icon:after {
    position: absolute;
    top: 15px;
    width: 15px;
    height: 15px;
    content: "";
    background-color: rgb(10, 243, 10);
    left: calc(60% - 10px);
    border-radius: 10px;
    animation: mouse 1.5s infinite;
  }
  @keyframes mouse {
    0% {
      opacity: 1;
      top: 1px;
    }
    100% {
      opacity: 0;
      top: 30px;
    }
  }
</style>
